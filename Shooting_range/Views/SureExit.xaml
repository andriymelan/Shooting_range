<Window x:Class="Shooting_range.Views.SureExit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shooting_range.Views"
        mc:Ignorable="d"
        Title="SureExit" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Margin="50 100" Content="Yes" x:Name="AcceptExit" />
        <Button Grid.Column="1" Margin="50 100" Content="No" x:Name="CancelExit" Command="{Binding CloseWindowCommand}"/>
    </Grid>
</Window>
